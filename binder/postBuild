#!/usr/bin/env bash
set -euo pipefail

echo "[postBuild] Enabling classic Notebook nbextensions..."

# Enable the configurator (UI tab) â€” classic Notebook 6.x
jupyter nbextensions_configurator enable --sys-prefix || true

# If the serverextension path is needed in some images:
jupyter serverextension enable --py jupyter_nbextensions_configurator --sys-prefix || true

# Enable specific extensions (skip quietly if one isn't present)
jupyter nbextension enable toc2/main --sys-prefix              || true
jupyter nbextension enable collapsible_headings/main --sys-prefix || true
jupyter nbextension enable execute_time/ExecuteTime --sys-prefix || true
jupyter nbextension enable hinterland/hinterland --sys-prefix || true
jupyter nbextension enable codefolding/main --sys-prefix       || true
jupyter nbextension enable varInspector/main --sys-prefix      || true

echo "[postBuild] Done."
