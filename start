#!/usr/bin/env bash
set -euo pipefail

# Force the singleuser app to be the classic Notebook server (not JupyterLab)
export JUPYTERHUB_SINGLEUSER_APP=notebook.notebookapp.NotebookApp

# Start classic Notebook at /tree
exec jupyter notebook --NotebookApp.default_url=/tree \
  --ip=0.0.0.0 --port="${PORT:-8888}" --no-browser
